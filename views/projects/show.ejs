<% include ../partials/header %>

<h1>More Information Page</h1>

<div class="ui main text container segment">

  <h2> <%=project.title%> </h2>
  <p> <%=project.subject%> </p>
  <p> <%=project.location%> </p>
  <p> <%=project.description%> </p>
  <p> <%=project.created.toDateString() %> </p>

  <div class="ui main text container segment">
    <div class="ui huge header">
      Add new comment
    </div>
    <form action="/projects/<%=project._id%>/comments" method="POST">
      <input type="text" name="comment[text]" placeholder="text">
      <br/>
      <button>Comment</button>
    </form>
    <br/>
  </div>

  <div class="ui main text container segment">
    <h2>Comments</h2>
    <% project.comments.forEach(function(comment){ %>
      <p>
        <strong><%= comment.author.username %></strong>
        <br/>
        <%= comment.text %>
        <br/>
        <span class="date_commented">10 days ago</span>
      </p>
    <% }) %>
  </div>


  <a href="/projects">back</a>
</div>

<% include ../partials/footer %>
