<% include ../partials/header %>

<div class="ui card container">
  <div class="content">

    <!-- Render delete post form -->
    <% if(project.author.id.equals(currentUser._id)) { %>
    <form action="/projects/<%= project._id %>?_method=DELETE" method="POST">
      <a><i class="right floated trash icon"></i></a>
    </form>
    <% } else { %>
          <a><i class="right floated thumbtack icon"></i></a>
    <% } %>

    <div class="header">
      <h2 class="ui header">
        <%=project.title%>
      </h2>
    </div>
    <div class="meta">
      <a>
        <%=project.subject%></a>
      <br />
      <a>
        <%=project.location%></a>
    </div>
    <div class="description">
      <p>
        <%=project.description%>
      </p>
    </div>
  </div>
  <div class="extra content">
    <span class="left floated">
      <a href="/projects">
        <div class="ui label">
          <i class="caret left icon"></i>
            back
        </div>
      </a>
      <a class="ui image label">
        <img src="<%=project.author.profilePicture%>">
        <%= project.author.username %>
      </a>
    </span>
    <span class="right floated">
      <!-- project.created.toDateString().split(' ').slice(1).join(' ') -->
      <%= moment(project.createdAt).fromNow() %>
    </span>
  </div>
  <!-- updates section -->

  <div class="ui bottom button">
    <div class="ui accordion">

      <% if(project.author.id.equals(currentUser._id)) { %>
        <div class="active title">
      <% } else { %>
        <div class="title">
      <% } %>

        <!-- show different icon depending on the user -->
        <% if(project.author.id.equals(currentUser._id)) { %>
            <i class="plus icon" style="color:#707070"></i>
        <% } else { %>
          <i class="caret down icon" style="color:#707070"></i>
        <% } %>
      </div>

      <% if(project.author.id.equals(currentUser._id)) { %>
        <div class="active content" style="text-align: left; font-weight: normal">
      <% } else { %>
        <div class="content" style="text-align: left; font-weight: normal">
      <% } %>

        <div class="ui vertical segment">
          <div class="header">
            <h3 class="ui dividing header">
              Updates
            </h3>
            <!-- Render update form if the current user owns the post -->
            <% if(project.author.id.equals(currentUser._id)) { %>
              <div class="content">
                <!-- Render updates form -->
                <form action="/projects/<%=project._id%>/comments" method="POST" class="ui form">
                  <div class="field">
                    <textarea type="text" name="comment[text]" placeholder="add an update to your project" rows="2" style="resize: none;"></textarea>
                  </div>
                  <button class="ui blue submit button">Update</button>
                </form>
              </div>
            <% } %>

          </div>
          <div class="content">
            <p>update to this post 1.
              <span class="right floated">
                1 day ago
              </span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- closing container tag -->
</div>

<div class="ui card container">
  <div class="content">
    <div class="ui comments">
      <h3 class="ui dividing header">Comments</h3>

      <div class="content">
        <form action="/projects/<%=project._id%>/comments" method="POST" class="ui form">
          <div class="field">
            <textarea type="text" name="comment[text]" placeholder="add public comment..." rows="2" style="resize: none;"></textarea>
          </div>
          <button class="ui blue submit button">Comment</button>
        </form>
      </div>

      <br />

      <div class="content">
        <% project.comments.reverse().forEach(function(comment){ %>
        <div class="ui comments">
          <div class="comment">
            <a class="avatar">
              <img src="<%=comment.author.profilePicture%>">
            </a>
            <div class="content">
              <a class="author">
                <%= comment.author.username %></a>
              <div class="metadata date_commented">
                <span class="date">
                  <%= moment(comment.createdAt).fromNow() %>
                </span>
              </div>
              <div class="text">
                <%= comment.text %>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>


    </div>
  </div>
</div>

<% include ../partials/footer %>
