<% include ../partials/header %>

<h1>More Information Page</h1>

<div class="ui main text container segment">

  <h2> <%=project.title%> </h2>
  <p> <%=project.subject%> </p>
  <p> <%=project.location%> </p>
  <p> <%=project.description%> </p>
  <p> <%=project.created.toDateString() %> </p>

  <div class="ui main text container segment">
    <div class="ui huge header">
      Add new comment
    </div>
    <form action="/projects/<%= project._id%>" method="POST">
      <input type="text" name="comment[text]" value="" placeholder="text">
      <br/>
      <input type="text" name="comment[author]" value="" placeholder="author">
      <br/>
      <button>Comment</button>
    </form>
    <br/>
  </div>

  <% project.comments.forEach(function(comment){ %>
    <p>
      <strong><%= comment.author %></strong> - <%= comment.text %>
    </p>
  <% }) %>

  <a href="/projects">back</a>
</div>

<% include ../partials/footer %>
