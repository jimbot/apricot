<% include ../partials/header %>

<div class="ui main text container segment">
  <div class="ui form">
    <h1 class="ui header">
      New Project
    </h1>
    <form class="ui form" action="/projects" method="POST">
      <div class="field">
        <input type="text" name="project[title]" value="" placeholder="Title">
      </div>
      <div class="field">
        <input type="text" name="project[subject]" value="" placeholder="Subject">
      </div>

      <div class="field">
        <input type="text" name="project[location]" value="" placeholder="Burnaby, B.C.">
      </div>
      <div class="field">
        <textarea class="projectDesc" name="project[description]"
          placeholder="Describe what your project or idea is about"
          rows="5" style="resize: none; line-height: 150%;" maxlength="350"></textarea>
      </div>
      <button class="ui primary submit button">
        Create Project
      </button>
    </form>
  </div>
</div>

