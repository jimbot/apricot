<% include ../partials/header %>

<div class="ui main text container segment newProj">
  <div class="ui form">
    <h1 class="ui header">
      New Project
    </h1>
    <form class="ui form" action="/projects" method="POST">
      <div class="field">
        <input type="text" name="project[title]" value="" placeholder="Title" required>
      </div>
      <div class="field">
        <select name="project[subject]" required>
          <option value="" disabled selected>Select Category</option>
          <option value="Business">Business</option>
          <option value="Environment">Environment</option>
          <option value="Techonlogy">Technology</option>
          <option value="Volunteer">Volunteer</option>
        </select>
      </div>

      <div class="field">
        <select name="project[location]" required>
          <option value="" disabled selected>Select Location</option>
          <option value="Burnaby">Burnaby</option>
          <option value="Coquitlam">Coquitlam</option>
          <option value="Richmond">Richmond</option>
          <option value="Surrey">Surrey</option>
          <option value="Vancouver">Vancouver</option>
        </select>
      </div>

      <div class="field">
        <textarea class="projectDesc" name="project[description]" placeholder="Describe what your project or idea is about"
          rows="5" style="resize: none; line-height: 150%;" maxlength="350" required></textarea>
      </div>
      <button class="ui primary submit button">
        Create Project
      </button>
    </form>
  </div>
</div>


<% include ../partials/footer %>