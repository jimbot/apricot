<% include ../partials/header %>

<% projects.reverse().forEach(function(project){ %>
<div class="ui card container">
  <div class="content">
    <!-- Render edit post form -->
    <% if(project.author.id.equals(currentUser._id)) { %>
          <a href="/projects/<%=project._id%>"><i class="right floated edit icon"></i></a>
    <% } else { %>
          <a><i class="right floated thumbtack icon"></i></a>
    <% } %>
    <div class="header">
      <h2 class="ui header">
        <%=project.title%>
      </h2>
    </div>
    <div class="meta">
      <a>
        <%=project.subject%></a>
      <br />
      <a>
        <%=project.location%></a>
    </div>
    <div class="description">
      <p>
        <%=project.description%>
      </p>
    </div>
  </div>
  <div class="extra content">
    <span class="left floated">
      <a class="ui image label">
        <img src="<%=project.author.profilePicture%>">
        <%= project.author.username %>
      </a>
      <a href="/projects/<%=project._id%>">
        <div class="ui label">
          <i class="comment icon"></i>
          <% if(project.comments.length > 0){ %>
            <%= project.comments.length %>
          <% } %>
        </div>
      </a>
    </span>
    <span class="right floated">
      <%= moment(project._id.createdAt).fromNow() %>
    </span>
  </div>

  <!-- Only render bottom button if the post has been updated by the creator -->
  <% if(project.updates.length > 0) { %>
    <div class="ui bottom button">
      <div class="ui accordion">
        <div class="title">
          <i class="caret down icon" style="color:#707070"></i>
        </div>
        <div class="content" style="text-align: left; font-weight: normal">
          <div class="ui vertical segment">
            <div class="header">
              <h3 class="ui dividing header">
                Updates
              </h3>
              <br/>
              <!-- Render the updates -->
              <div class="content">
                <% project.updates.reverse().forEach(function(update){ %>
                <div class="ui comments">
                  <div class="comment">
                    <div class="content">
                      <a class="author">
                        <%= update.author.username %></a>
                      <div class="metadata date_commented">
                        <span class="date">
                          <%= moment(update.createdAt).fromNow() %>
                        </span>
                      </div>
                      <div class="text">
                        <%= update.text %>
                      </div>
                    </div>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% } %>


</div>
<% }) %>

<% if(currentUser){ %>
<a href="/projects/new">
  <i class="plus circle icon"></i>
</a>
<% } %>

<% include ../partials/footer %>
